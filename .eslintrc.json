{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-param-reassign": "off",
        "import/extensions": [
           "error",
           "ignorePackages",
           {
             "js": "always",
             "jsx": "never",
             "ts": "never",
             "tsx": "never"
           }
        ]
     }
}
